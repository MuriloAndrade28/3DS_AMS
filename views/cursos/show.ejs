<h1>Cursos</h1>
<a href="/cursos/add" class="btn btn-success mb-3">Adicionar Curso</a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Duração</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% cursos.forEach(curso => { %>
      <tr>
        <td><%= curso.id %></td>
        <td><%= curso.nome %></td>
        <td><%= curso.duracao %></td>
        <td>
          <a href="/cursos/<%= curso.id %>/add-alunos" class="btn btn-primary btn-sm">Adicionar Alunos</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
